<div class="content">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= link_to "Do I Need a Jacket", root_path %></h1>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag(pages_home_path, method: "get") do %>
      <%= label_tag :zip, "Enter Your Zip Code", class: "form-label" %><br>
      <br>
        <%= text_field_tag :zip,'', placeholder: "e.g. 91765", class: "form-control" %><br>
      <%= submit_tag "show me the money!", class: "btn btn-primary button" %>
    <% end %>
  </div>

  <% if @weather_lookup.error %>
    <div class="col-md-12">
      <div class="jumbotron">
        <h1 class="error"><%= @weather_lookup.error %></h1>
      </div>
    </div>
  <% else %>
    <div class="col-md-12">
      <div class="jumbotron">
        <% if @weather_lookup.temperature >= 75 %>
          <h1><%= ["do you want to get a heatstroke?", "NO", "NO.", "you should be taking off clothes..", "suns out, guns out"].sample %></h1>
        <% elsif @weather_lookup.temperature >= 63 %>
          <h1><%= ["Maybe", "light jacket, perhaps?", "maybe, just maybe..", "flip a coin", "only if you're a wimp", "nah, a little cold never hurt anybody"].sample %></h1>
        <% else %>
          <h1><%= ["YES", "you better...", "YES.", "not if you're trying to get sick", "not if you want nipple blades"].sample %></h1>
        <% end %>
      </div>
    </div>
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-body">
        <h3>Temperature: <%= @weather_lookup.temperature %>&#8457;</h3>
        <h3>Conditions: <%= @weather_lookup.weather_condition %></h3>
        <h3>Location: <%= @weather_lookup.city %>, <%= @weather_lookup.state %></h3>
      </div>
    </div>
  <% end %>

</div>

