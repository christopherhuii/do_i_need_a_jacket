<div class="content">
  <div class="col-md-6 col-md-offset-3">
    <h1>Do I Need a Jacket?</h1>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag(pages_home_path, method: "get") do %>
      <%= label_tag :zip, "ENTER YOUR ZIPCODE TO FIND YOUR WEATHER", class: "form-label" %><br>
      <br>
        <%= text_field_tag :zip,'', placeholder: "e.g. 91765", class: "form-control" %><br>
      <%= submit_tag "show me the weather", class: "btn btn-primary button" %>
    <% end %>
  </div>
</div>

